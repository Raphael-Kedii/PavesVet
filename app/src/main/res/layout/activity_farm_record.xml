<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8FCF9F"
    tools:context=".FarmRecordActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        style="@style/HeaderBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
        android:elevation="4dp"/>
    <TextView
        android:id="@+id/title_income"
        android:layout_below="@id/my_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="income"
        android:layout_centerInParent="true"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/income"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_below="@id/title_income">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/livestock_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/livestock_income_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Livestock Farming Income"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/crop_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/crop_income_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Crop Farming Income"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/other_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/other_income_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Other Income"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/total_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/total_income_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total Income"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/title_expense"
        android:layout_below="@id/income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="expenses"
        android:layout_centerInParent="true"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/expense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_below="@id/title_expense">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/livestock_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/livestock_expense_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Livestock Farming Expense"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/crop_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/crop_expense_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Crop Farming Expense"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/other_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/other_expense_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Other Expense"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/total_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/total_expense_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Total Expense"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
<Button
    android:id="@+id/add_data"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/expense"
    style="@style/Widget.AppCompat.Button.Colored"
    android:text="Add"/>

</RelativeLayout>