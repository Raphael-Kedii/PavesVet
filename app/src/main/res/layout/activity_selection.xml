<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/layout_background"
    tools:context=".SelectionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="341dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/who_are_you"
            android:textStyle="bold"
            android:textColor="@color/accent"
            android:textSize="30sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/linearlayout_back"
        android:gravity="center">

        <ImageView
            android:id="@+id/farmer_icon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_above="@+id/farmers_btn"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="17dp"
            android:src="@drawable/farmer" />


        <Button
            android:id="@+id/farmers_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="80dp"
            android:background="@drawable/my_buttons"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/farmer"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/vets_icon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="80dp"
            android:layout_above="@+id/expert_btn"
            android:layout_toEndOf="@+id/farmer_icon"
            android:layout_marginBottom="17dp"
            android:src="@drawable/vet_expert" />

        <Button
            android:id="@+id/expert_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="80dp"
            android:background="@drawable/my_buttons_two"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/expert" />
    </RelativeLayout>
</LinearLayout>